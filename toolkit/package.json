{
    "name": "toolkit",
    "type": "module",
    "private": true,
    "description": "A template for creating GitHub Actions",
    "author": {
        "name": "hywax",
        "email": "me@hywax.space"
    },
    "license": "MIT",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "engines": {
        "node": ">=20.19.2"
    },
    "scripts": {
        "build": "tsc && vite build",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "vitest --run",
        "test:watch": "vitest",
        "test:coverage": "vitest --coverage",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@actions/artifact": "^2.3.2",
        "@actions/core": "^1.11.1",
        "@actions/github": "^6.0.1",
        "@actions/io": "^1.1.3",
        "ansi_up": "^6.0.6",
        "@actions/exec": "^1.1.1",
        "@actions/glob": "^0.5.0"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^2.27.3",
        "@types/node": "^24.0.3",
        "@vitest/coverage-v8": "^3.2.4",
        "eslint": "^9.29.0",
        "eslint-config-prettier": "^10.1.5",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.34.1",
        "vite": "^5.4.19",
        "vitest": "^3.2.4"
    }
}
