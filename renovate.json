{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "description": "Docker deps are held back currently to requiee dep daahboard approval",
            "matchManagers": [
                "docker-compose",
                "github-actions",
                "helmv3"
            ],
            "dependencyDashboardApproval": true
        },
        {
            "groupName": "container",
            "groupSlug": "container",
            "matchManagers": ["dockerfile"]
        },
        {
            "groupName": "dev-deps",
            "matchDepTypes": ["devDependencies","require-dev"]
        },
        {
            "description": "npm and composer deps are well covered in automated testing. if patch versions pass ci, we'll automerge",
            "matchUpdateTypes": [
                "patch"
            ],
            "matchCurrentVersion": "!/^0/",
            "matchFileNames": ["backend/**", "client/**"],
            "matchManagers": ["npm","composer"],
            "automerge": true,
            "automergeType": "branch"
        },
        {
            "description": "group frontend npm deps for PR approval",
            "groupName": "client",
            "matchFileNames": ["client/**"],
            "matchManagers": ["npm"],
            "matchDepTypes": ["dependencies"],
            "matchUpdateTypes": ["minor", "patch"]
        },
        {
            "groupName": "major-upgrades",
            "matchFileNames": ["client/**", "backend/**"],
            "matchManagers": ["npm", "composer"],
            "matchDepTypes": ["require", "dependencies"],
            "matchUpdateTypes": ["major"]
        },
        {
            "groupName": "api",
            "groupSlug": "api",
            "matchManagers": ["composer"],
            "matchFileNames": ["backend/**"],
            "matchDepTypes": ["require"],
            "matchUpdateTypes": ["minor", "patch"]
        },
        {
            "groupName": "docs",
            "groupSlug": "docs",
            "matchFileNames": ["docs/**"]
        }
    ],
    "assignees": [
        "wreality"
    ],
    "timezone": "America/Detroit"
}
