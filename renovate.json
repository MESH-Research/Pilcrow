{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "description": "Docker deps are held back currently to requiee dep daahboard approval",
            "matchManagers": [
                "dockerfile",
                "docker-compose",
                "github-actions"
            ],
            "dependencyDashboardApproval": true
        },
        {
            "description": "npm and composer deps are well covered in automated testing. if patch versions pass ci, we'll automerge",
            "matchUpdateTypes": [
                "patch"
            ],
            "matchCurrentVersion": "!/^0/",
            "matchFileNames": ["backend/**", "client/**"],
            "matchManagers": ["npm","composer"],
            "automerge": true,
            "automergeType": "branch"
        },
        {
            "description": "group frontend npm deps for PR approval",
            "groupName": "(client) Dependency Incremental Updates",
            "groupSlug": "frontend",
            "matchFileNames": ["client/**"],
            "matchManagers": ["npm"],
            "matchUpdateTypes": ["minor", "patch"]
        },
        {
            "groupName": "(client) Dependency Major Updates",
            "groupSlug": "frontend-major",
            "matchFileNames": ["client/**"],
            "matchManagers": ["npm"],
            "matchUpdateTypes": ["major"]
        },
        {
            "groupName": "(api) Dependency Incremental Updates",
            "groupSlug": "api",
            "matchManagers": ["composer"],
            "matchFileNames": ["backend/**"],
            "matchUpdateTypes": ["minor", "patch"]
        },
         {
            "groupName": "(api) Dependency Major Updates",
            "groupSlug": "api-major",
            "matchManagers": ["composer"],
            "matchFileNames": ["backend/**"],
            "matchUpdateTypes": ["major"]
        },
        {
            "groupName": "Docs Site Dependencies",
            "groupSlug": "docs",
            "matchFileNames": "docs/**"
        }
    ],
    "assignees": [
        "wreality"
    ],
    "schedule": [
        "after 10pm every weekday",
        "before 5am every weekday",
        "every weekend"
    ],
    "timezone": "America/Detroit"
}
