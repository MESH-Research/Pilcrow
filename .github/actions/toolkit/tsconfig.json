{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "rootDir": "./src",
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmit": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "/src/*": ["./*"],
            "/commands/*": ["./commands/*"],
            "/lib/*": ["./lib/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.test.ts", "test/**", "node_modules"]
}
